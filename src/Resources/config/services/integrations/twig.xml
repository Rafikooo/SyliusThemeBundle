<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Sylius\Bundle\ThemeBundle\Twig\Locator\ApplicationTemplateLocator">
            <argument type="service" id="filesystem" />
            <tag name="sylius_theme.twig.template_locator" />
        </service>

        <service id="Sylius\Bundle\ThemeBundle\Twig\Locator\BundleTemplateLocator">
            <argument type="service" id="filesystem" />
            <argument type="service" id="kernel" />
            <tag name="sylius_theme.twig.template_locator" />
        </service>

        <service id="Sylius\Bundle\ThemeBundle\Twig\Locator\NamespacedTemplateLocator">
            <argument type="service" id="filesystem" />
            <tag name="sylius_theme.twig.template_locator" />
        </service>

        <service id="sylius_theme.twig.template_locator" class="Sylius\Bundle\ThemeBundle\Twig\Locator\CompositeTemplateLocator">
            <argument type="tagged_iterator" tag="sylius_theme.twig.template_locator" />
        </service>
        <service id="Sylius\Bundle\ThemeBundle\Twig\Locator\TemplateLocatorInterface" alias="sylius_theme.twig.template_locator" />

        <service id="Sylius\Bundle\ThemeBundle\Twig\Locator\HierarchicalTemplateLocator" decorates="sylius_theme.twig.template_locator">
            <argument type="service" id="Sylius\Bundle\ThemeBundle\Twig\Locator\HierarchicalTemplateLocator.inner" />
            <argument type="service" id="sylius.theme.hierarchy_provider" />
        </service>

        <service id="Sylius\Bundle\ThemeBundle\Twig\Loader\ThemedTemplateLoader" decorates="twig.loader" decoration-priority="256">
            <argument type="service" id="Sylius\Bundle\ThemeBundle\Twig\Loader\ThemedTemplateLoader.inner" />
            <argument type="service" id="sylius_theme.twig.template_locator" />
            <argument type="service" id="sylius.context.theme" />
        </service>
    </services>
</container>
